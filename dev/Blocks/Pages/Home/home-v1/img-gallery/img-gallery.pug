include ../../../../Shortcodes/section-title/section-title

mixin img-gallery()
  +b.SECTION.img-gallery
    +section-title("Gallery")
    +e.DIV.container
      +b.DIV.content
        +b.DIV.img-gallery-filter
          +e.DIV.btn(type='button', data-filter='.all') All
          +e.DIV.btn(type='button', data-filter='.fitness') Fitness
          +e.DIV.btn(type='button', data-filter='.body') Body
          +e.DIV.btn(type='button', data-filter='.gym-fitness') Gym fitness
        +b.DIV.img-gallery-images
          
          //- img
          +e.DIV.item(class="mix fitness all")
            a.colorbox(href="img/img1.jpg")
              i.fa.fa-eye
              img(src="img/img1.jpg", alt="Image Gallery")
          
          //- img
          +e.DIV.item(class="mix fitness all")
            a.colorbox(href="img/img2.jpg")
              i.fa.fa-eye
              img(src="img/img2.jpg", alt="Image Gallery")
          
          //- img
          +e.DIV.item(class="mix gym-fitness all")
            a.colorbox(href="img/img3.jpg")
              i.fa.fa-eye
              img(src="img/img3.jpg", alt="Image Gallery")
          
          //- img
          +e.DIV.item(class="mix body all")
            a.colorbox(href="img/img4.jpg")
              i.fa.fa-eye
              img(src="img/img4.jpg", alt="Image Gallery")
          
          //- img
          +e.DIV.item(class="mix body all")
            a.colorbox(href="img/img5.jpg")
              i.fa.fa-eye
              img(src="img/img5.jpg", alt="Image Gallery")
          
          //- img
          +e.DIV.item(class="mix gym-fitness all")
            a.colorbox(href="img/img6.jpg")
              i.fa.fa-eye
              img(src="img/img6.jpg", alt="Image Gallery")
